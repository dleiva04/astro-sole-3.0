import Item from "./item.astro";
const { products, isRecommendation } = Astro.props;
---

{
    products.map((product) => {
        if (product.node != undefined) {
            product = product.node;
        }
        return (
            <Item
                id={product.id.split("/").slice(-1)[0]}
                name={product.title}
                price={`â‚¡ ${product.variants.nodes[0].price.amount}`}
                isRecommendation={isRecommendation}
            />
        );
    })
}
