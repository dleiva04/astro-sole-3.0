---
import Layout from "../layouts/Layout.astro";
---

<Layout title={"Inicio"}>
  <section class="w-[90%] mx-auto my-12 md:mb-24">
    <picture>
      <source media="(min-width:768px)" srcset="/desktop.png" />
      <img src="/phone.png" class="w-full" />
    </picture>
  </section>

  <section class="w-[90%] md:w-[80%] mx-auto flex flex-col my-12 md:my-24">
    <h2 class="mb-8 text-2xl font-extrabold tracking-wider uppercase">
      Categorias
    </h2>
    <div class="w-full flex md:gap-8 flex-wrap md:flex-nowrap">
      <div class="w-1/2 md:w-1/4 hover:text-gray-500 p-1">
        <a href="#" class="flex flex-col items-center justify-center">
          <img src="/categoria.png" alt="Categoria 1" />
          <p class="mt-4 font-bold text-lg underline">Ver Blusas</p>
        </a>
      </div>
      <div class="w-1/2 md:w-1/4 hover:text-gray-500 p-1">
        <a href="#" class="flex flex-col items-center justify-center">
          <img src="/categoria.png" alt="Categoria 1" />
          <p class="mt-4 font-bold text-lg underline">Ver Blusas</p>
        </a>
      </div>

      <div class="w-1/2 md:w-1/4 hover:text-gray-500 p-1">
